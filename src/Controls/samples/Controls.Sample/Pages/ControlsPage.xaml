<views:BasePage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Pages.ControlsPage"
    BackgroundColor="Lime"
    xmlns:controls="using:Maui.Controls.Sample.Controls"
    xmlns:views="clr-namespace:Maui.Controls.Sample.Pages.Base"
    xmlns:behaviors="clr-namespace:Maui.Controls.Sample.Behaviors"
    xmlns:viewmodels="clr-namespace:Maui.Controls.Sample.ViewModels">
    <views:BasePage.BindingContext>
        <viewmodels:ControlsViewModel />
    </views:BasePage.BindingContext>
    <!-- TODO: Create a ControlTemplate -->
    <ScrollView>
      <VerticalStackLayout Spacing="10">
        <Label Text="Platform Behavior Bug"/>
        
        <ContentView HeightRequest="300" WidthRequest="300">
          <ContentView.Behaviors>
            <behaviors:ColorBehavior Color="{AppThemeBinding Light='#0000FF', Dark='#FF0000'}"/>
          </ContentView.Behaviors>
        </ContentView>
      </VerticalStackLayout>
    </ScrollView>
</views:BasePage>